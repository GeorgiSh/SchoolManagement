<Window x:Class="SchoolManagement.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="School Management System" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Welcome to the School Management System" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center" />
        <Button Content="Manage Students" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="ManageStudents_Click" />
        <Button Content="Manage Teachers" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="ManageTeachers_Click" />
        <Button Content="Manage Classes" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="ManageClasses_Click" />
        <Button Content="Manage Persons" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="ManagePersons_Click" />
        <Button Content="Manage Enrollments" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="ManageEnrollments_Click" />
    </StackPanel>
</Window>
